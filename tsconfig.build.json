{
    "compilerOptions": {
        "lib": [ "es5", "es6", "DOM" ],
        "module": "commonjs",
        "target": "es6",
        "composite": true,
        "declaration": true,
        "sourceMap": false,
        "baseUrl": "./packages",
        "rootDir": "./",
        "outDir": "./dist"
    },

    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "/**/*.spec*",
    ],
    
    "include": [
        "src/**/*",
        "./packages/Core/src/**/*",
        "./packages/GraphicsPIXI/src/**/*",
        "./packages/SoundPIXI/src/**/*",
        "./packages/NetworkAxios/src/**/*"
    ]
}

